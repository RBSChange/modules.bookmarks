<?xml version="1.0" encoding="UTF-8"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_bookmarks/treefolder" />
				<child model="modules_bookmarks/categoryfolder" />
			</children>
			<drops>
				<drop model="modules_generic/folder" action="move" />
				<drop model="modules_bookmarks/treefolder" action="move" />
				<drop model="modules_bookmarks/categoryfolder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<groupactions name="createRootfolder_">
					<contextaction name="createFolder" />
					<contextaction name="createTreefolder" />
					<contextaction name="createCategoryfolder" />
				</groupactions>
				<contextaction name="initDefaultStructure" />
				<contextaction name="initLocalStructure" />
				<contextaction name="openTreeNodeOrder" />
			</contextactions>
		</model>
		<model name="modules_generic/folder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_bookmarks/treefolder" />
				<child model="modules_bookmarks/categoryfolder" />
			</children>
			<drops>
				<drop model="modules_generic/folder" action="move" />
				<drop model="modules_bookmarks/treefolder" action="move" />
				<drop model="modules_bookmarks/categoryfolder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<groupactions name="createFolder_">
					<contextaction name="createFolder" />
					<contextaction name="createTreefolder" />
					<contextaction name="createCategoryfolder" />
				</groupactions>
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_bookmarks/treefolder">
			<children>
				<child model="modules_bookmarks/treefolder" />
				<child model="modules_bookmarks/bookmark" />
			</children>
			<drops>
				<drop model="modules_bookmarks/treefolder" action="move" />
				<drop model="modules_bookmarks/bookmark" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="createBookmark" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_bookmarks/bookmark">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
		<model name="modules_bookmarks/categoryfolder">
			<children>
				<child model="modules_bookmarks/categoryfolder" />
				<child model="modules_bookmarks/category" />
			</children>
			<drops>
				<drop model="modules_bookmarks/categoryfolder" action="move" />
				<drop model="modules_bookmarks/category" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="createCategory" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_bookmarks/category">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="delete" />
		<toolbarbutton name="deactivated" />
		<toolbarbutton name="reactivate" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;" />
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="openFolder" single="true" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;" />
		<action name="openTags" single="true" permission="LoadTags" icon="edit-tags" label="&amp;modules.uixul.bo.actions.Open-tags-panel;" />
		<action name="duplicate" single="true" permission="Duplicate" icon="duplicate" label="&amp;modules.uixul.bo.actions.Duplicate;" />
		<action name="activate" single="true" permission="Activate" icon="activate" label="&amp;modules.uixul.bo.actions.Activate;" />
		<action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;" />
		<action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;" />
		<action name="createFolder" single="true" permission="Insert_folder" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;" />
		<action name="createTreefolder" single="true" permission="Insert_treefolder" icon="add" />
		<action name="createBookmark" single="true" permission="Insert_bookmark" icon="add" />
		<action name="createCategoryfolder" single="true" permission="Insert_categoryfolder" icon="add" />
		<action name="createCategory" single="true" permission="Insert_category" icon="add" />
		<action name="createRootfolder_" icon="add" label="&amp;modules.bookmarks.bo.actions.Create_;" />
		<action name="createFolder_" icon="add" label="&amp;modules.bookmarks.bo.actions.Create_;" />
		<action name="initDefaultStructure" single="true" permission="InitStructure" icon="add" />
		<action name="initLocalStructure" single="true" permission="InitStructure" icon="add" />
	</actions>
</perspective>
